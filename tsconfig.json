{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,                                // ✅ allows .js/.jsx files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"                              // ✅ enables JSX for React 17+
  },
  "include": ["src"],                               // ✅ includes your app code
  "references": [{ "path": "./tsconfig.node.json" }] // ✅ optional, useful for monorepo or server code
}
